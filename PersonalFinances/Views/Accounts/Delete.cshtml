@model PersonalFinances.Models.Account

@{
    ViewBag.Title = "Delete account";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small>Delete the account</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="@Url.Action("Index", "Accounts")">Accounts</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- box -->
        <div class="box box-danger">
            <div class="box-body">
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <h4><i class="icon fa fa-warning"></i> Alert!</h4>
                    This operation can not be undone!
                </div>

                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(a => a.Name)</dt>
                    <dd>@Html.DisplayFor(a => a.Name)</dd>

                    <dt>@Html.DisplayNameFor(a => a.AccountType)</dt>
                    <dd>@Html.DisplayFor(a => a.AccountType)</dd>

                    <dt>@Html.DisplayNameFor(a => a.Balance)</dt>
                    <dd>@Model.Balance.ToString("F2")</dd>

                    <dt>@Html.DisplayNameFor(a => a.Movements)</dt>
                    <dd>@Html.DisplayFor(a => a.Movements.Count)</dd>
                </dl>
                                
                <form action="@Url.Action("Delete", "Accounts")" method="post">
                    @Html.HiddenFor(a => a.Id)
                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-flat btn-danger"><i class="fa fa-trash-o"></i> Delete</button>
                </form>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
