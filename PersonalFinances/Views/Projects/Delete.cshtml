@model PersonalFinances.Models.Project

@{
    ViewBag.Title = "Delete project";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small>Delete the project</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="@Url.Action("Index", "Projects")">Projects</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- box -->
        <div class="box box-danger">
            <div class="box-body">
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <h4><i class="icon fa fa-warning"></i> Alert!</h4>
                    This operation can not be undone!
                </div>

                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(p => p.Name)</dt>
                    <dd>@Html.DisplayFor(p => p.Name)</dd>

                    <dt>@Html.DisplayNameFor(p => p.StartDate)</dt>
                    <dd>@Html.Display("StartDate", Model.StartDate.ToShortDateString())</dd>

                    <dt>@Html.DisplayNameFor(p => p.FinishDate)</dt>
                    <dd>@Html.Display("FinishDate", Model.FinishDate.GetValueOrDefault().ToShortDateString())</dd>

                    <dt>@Html.DisplayNameFor(p => p.Budget)</dt>
                    <dd>@Html.Display("Budget", Model.Budget.GetValueOrDefault().ToString("F2"))</dd>

                    <dt>@Html.DisplayNameFor(p => p.ProjectBalance)</dt>
                    <dd>@Html.Display("ProjectBalance", Model.ProjectBalance.ToString("F2"))</dd>

                    <dt>@Html.DisplayNameFor(p => p.ProjectStatus)</dt>
                    <dd>@Html.DisplayFor(p => p.ProjectStatus)</dd>

                    <dt>@Html.DisplayNameFor(p => p.Description)</dt>
                    <dd>@Html.DisplayFor(p => p.Description)</dd>
                </dl>

                <form action="@Url.Action("Delete", "Projects")" method="post">
                    @Html.HiddenFor(p => p.Id)
                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-flat btn-danger"><i class="fa fa-trash-o"></i> Delete</button>
                </form>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
