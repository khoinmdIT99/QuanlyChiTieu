@model PersonalFinances.Models.Project

@{
    ViewBag.Title = "Edit project";

    SelectList projectStatusComboBox = new SelectList(Enum.GetValues(typeof(ProjectStatus)));
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small>Edit a existing project</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="@Url.Action("Index", "Projects")">Projects</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- box -->
        <div class="box box-success">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <form role="form" action="@Url.Action("Edit", "Projects")" method="post">
                            <span class="text-red">@Html.ValidationSummary()</span>

                            <div class="form-group">
                                @Html.LabelFor(p => p.Name)
                                @Html.TextBoxFor(p => p.Name, new { Class = "form-control" })
                            </div>
                            
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(p => p.StartDate)
                                        @Html.TextBox("StartDate", DateTime.Now.ToShortDateString(), new { Class = "form-control", Readonly = "readonly"})
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(p => p.FinishDate)
                                        @Html.TextBox("FinishDate", Model.FinishDate.GetValueOrDefault().ToShortDateStringDefaultIfNull(), new { Class = "form-control datepicker" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(p => p.Budget)
                                        @Html.TextBoxFor(p => p.Budget, new { Class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(p => p.ProjectStatus)
                                        @Html.DropDownListFor(p => p.ProjectStatus, projectStatusComboBox, new { Class = "form-control selectpicker" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(p => p.Description)
                                @Html.TextAreaFor(p => p.Description, new { Class = "form-control" })
                            </div>

                            @Html.AntiForgeryToken()

                            <button type="submit" class="btn btn-success btn-flat pull-left"><i class="fa fa-floppy-o"></i> Update</button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
