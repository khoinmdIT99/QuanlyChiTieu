@model PersonalFinances.Models.Category

@{
    ViewBag.Title = "Delete category";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small>Delete the category</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="@Url.Action("Index", "Categories")">Categories</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- box -->
        <div class="box box-danger">
            <div class="box-body">
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <h4><i class="icon fa fa-warning"></i> Alert!</h4>
                    This operation can not be undone! The subcategories also be deleted
                </div>

                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(c => c.Name)</dt>
                    <dd>@Html.DisplayFor(c => c.Name)</dd>

                    <dt>@Html.DisplayNameFor(c => c.Type)</dt>
                    <dd>@Html.DisplayFor(c => c.Type)</dd>

                    <dt>@Html.DisplayNameFor(c => c.Subcategories)</dt>
                    <dd>@Model.Subcategories.Count</dd>
                </dl>

                <form action="@Url.Action("Delete", "Categories")" method="post">
                    @Html.HiddenFor(c => c.Id)
                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-flat btn-danger"><i class="fa fa-trash-o"></i> Delete</button>
                </form>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
