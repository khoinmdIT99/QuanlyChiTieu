@model IEnumerable<PersonalFinances.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small>Add, edit, remove and view your saved categories</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- box -->
        <div class="box box-primary">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-2">
                        <a href="@Url.Action("New", "Categories")" class="btn btn-flat btn-block btn-success"><i class="fa fa-plus"></i> New category</a>
                    </div>
                </div>

                <br />

                <table class="table table-hover datatable" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Subcategories</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Name</td>
                                @if (category.Type.Equals("C"))
                                {
                                    <td><span class="label label-success">Credit</span></td>
                                }
                                else
                                {
                                    <td><span class="label label-danger">Debit</span></td>
                                }
                                <td>@category.Subcategories.Count</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("View", "Categories", new { Id = category.Id})" class="btn btn-flat btn-default"><i class="fa fa-eye"></i> View</a>
                                        <a href="@Url.Action("Edit", "Categories", new { Id = category.Id })" class="btn btn-flat btn-default"><i class="fa fa-pencil-square-o"></i> Edit</a>
                                        <a href="@Url.Action("Delete", "Categories", new { Id = category.Id})" class="btn btn-flat btn-danger"><i class="fa fa-trash-o"></i> Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
